{
  "name": "recipe-share",
  "version": "0.3.0",
  "description": "Find and post recipes with others",
  "author": "Ian Rose",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ianrosedev/recipe-share.git"
  },
  "homepage": "https://github.com/ianrosedev/recipe-share",
  "bugs": {
    "url": "https://github.com/ianrosedev/recipe-share/issues"
  },
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"./**/*.{js, json, html, css, scss, md}\"",
    "install-all": "npm i && (cd server && npm i) && (cd client && npm i)",
    "lint": "eslint --fix --ignore-path .gitignore .",
    "start": "node -r esm index.js",
    "start-dev": "(concurrently -n DB,SERVER,CLIENT -c magenta,blue,cyan -k \"npm:start-dev-db\" \"npm:start-dev-server\" \"npm:start-dev-client\") && echo \"ğŸ‘  all done!\"",
    "start-dev-client": "npm start --prefix client",
    "start-dev-db": "mongod &> /dev/null",
    "start-dev-server": "NODE_ENV=development nodemon -r 'dotenv/config' -r esm --inspect --ignore \"client\" index.js || exit 0",
    "test": "concurrently -n SERVER,CLIENT -c blue,cyan -k \"npm run test-server\" \"npm run test-client\"",
    "test-ci": "npm run test-server-ci && npm run test-client-ci",
    "test-client": "npm test --prefix client",
    "test-client-ci": "CI=true SKIP_PREFLIGHT_CHECK=true npm test --prefix client",
    "test-server": "NODE_ENV=test mocha -r 'dotenv/config' -r esm -w -s 1000 --recursive server/test || exit 0",
    "test-server-ci": "NODE_ENV=test mocha -r 'dotenv/config' -r esm -t 20000 -s 1000 --recursive --exit server/test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js, json, html, css, scss, md}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "server/**/*.{js, json, md}": [
        "npm run test-server-ci",
        "git add"
      ],
      "client/**/*.{js, json, html, css, scss, md}": [
        "npm test",
        "git add"
      ]
    }
  },
  "dependencies": {
    "esm": "^3.0.84"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3"
  }
}
